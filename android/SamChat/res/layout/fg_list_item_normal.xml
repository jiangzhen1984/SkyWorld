<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    	android:layout_width="match_parent"
    	android:layout_height="match_parent">

        <ImageView
    	    android:id="@+id/publisher_img"
        	android:layout_width="43dp"
        	android:layout_height="43dp"
        	android:layout_marginLeft = "10dp"
        	android:layout_marginRight = "10dp"
        	android:layout_marginTop = "10dp"
        	android:contentDescription="@null"
        	android:layout_alignParentLeft="true"
        	android:layout_alignParentTop="true"
        	android:src="@drawable/em_default_avatar"/>

        <LinearLayout
    		android:layout_width="match_parent"
    		android:layout_height="match_parent"
    		android:layout_marginRight = "10dp"
        	android:layout_marginTop = "10dp"
    		android:layout_alignParentTop="true"
    		android:orientation="vertical" 
    		android:layout_toRightOf="@id/publisher_img">

        <TextView
    	    android:id="@+id/publisher_nickname"
        	android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/top_bar_normal_bg"/>
        
        <TextView
    	    android:id="@+id/comment"
        	android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop = "2dp"
            android:textSize="15sp"/>
		
        <RelativeLayout 
    		android:layout_width="match_parent"
    		android:layout_height="wrap_content"
    		android:layout_marginTop = "5dp">
    		
            <ImageView
    	    	android:id="@+id/one_img"
        		android:layout_width="240dp"
        		android:layout_height="240dp"
        		android:contentDescription="@null"
        		android:layout_alignParentLeft="true"
        		android:layout_alignParentTop="true"
        		android:scaleType="fitStart"
        		android:visibility="gone"/>
    		
            <RelativeLayout
                android:id="@+id/nine_img_layout" 
    			android:layout_width="match_parent"
    			android:layout_height="wrap_content"
    			android:layout_alignParentLeft="true"
        		android:layout_alignParentTop="true"
        		android:visibility="gone">
    		
            <ImageView
    	    	android:id="@+id/img_1"
        		android:layout_width="80dp"
        		android:layout_height="80dp"
        		android:contentDescription="@null"
        		android:layout_alignParentLeft="true"
        		android:layout_alignParentTop="true"
        		android:scaleType="centerCrop"
        		android:visibility="gone"
        		/>
            
            <ImageView
    	    	android:id="@+id/img_2"
        		android:layout_width="80dp"
        		android:layout_height="80dp"
        		android:layout_marginLeft="10dp"
        		android:contentDescription="@null"
        		android:scaleType="centerCrop"
        		android:visibility="gone"
        		android:layout_toRightOf="@id/img_1"/>
            
            <ImageView
    	    	android:id="@+id/img_3"
        		android:layout_width="80dp"
        		android:layout_height="80dp"
        		android:layout_marginLeft="10dp"
        		android:contentDescription="@null"
        		android:scaleType="centerCrop"
        		android:visibility="gone"
        		android:layout_toRightOf="@id/img_2"/>
            
            <ImageView
    	    	android:id="@+id/img_4"
        		android:layout_width="80dp"
        		android:layout_height="80dp"
        		android:layout_marginTop="10dp"
        		android:contentDescription="@null"
        		android:layout_alignParentLeft="true"
        		android:scaleType="centerCrop"
        		android:visibility="gone"
        		android:layout_below="@id/img_1"/>
            
            <ImageView
    	    	android:id="@+id/img_5"
        		android:layout_width="80dp"
        		android:layout_height="80dp"
        		android:contentDescription="@null"
        		android:layout_marginTop="10dp"
        		android:layout_marginLeft="10dp"
        		android:layout_below="@id/img_2"
        		android:scaleType="centerCrop"
        		android:visibility="gone"
        		android:layout_toRightOf="@id/img_4"/>
            
            <ImageView
    	    	android:id="@+id/img_6"
        		android:layout_width="80dp"
        		android:layout_height="80dp"
        		android:layout_marginTop="10dp"
        		android:layout_marginLeft="10dp"
        		android:contentDescription="@null"
        		android:layout_below="@id/img_3"
        		android:scaleType="centerCrop"
        		android:visibility="gone"
        		android:layout_toRightOf="@id/img_5"/>
            
            <ImageView
    	    	android:id="@+id/img_7"
        		android:layout_width="80dp"
        		android:layout_height="80dp"
        		android:layout_marginTop="10dp"
        		android:contentDescription="@null"
        		android:layout_alignParentLeft="true"
        		android:scaleType="centerCrop"
        		android:visibility="gone"
        		android:layout_below="@id/img_4"/>
            
            <ImageView
    	    	android:id="@+id/img_8"
        		android:layout_width="80dp"
        		android:layout_height="80dp"
        		android:layout_marginTop="10dp"
        		android:layout_marginLeft="10dp"
        		android:contentDescription="@null"
        		android:layout_below="@id/img_5"
        		android:scaleType="centerCrop"
        		android:visibility="gone"
        		android:layout_toRightOf="@id/img_7"/>
            
            <ImageView
    	    	android:id="@+id/img_9"
        		android:layout_width="80dp"
        		android:layout_height="80dp"
        		android:layout_marginTop="10dp"
        		android:layout_marginLeft="10dp"
        		android:contentDescription="@null"
        		android:layout_below="@id/img_6"
        		android:scaleType="centerCrop"
        		android:visibility="gone"
        		android:layout_toRightOf="@id/img_8"/>
    		
            
        	</RelativeLayout>
        </RelativeLayout>
        
        <LinearLayout
    		android:layout_width="match_parent"
    		android:layout_height="wrap_content"
    		android:layout_marginTop = "5dp"
    		android:layout_marginRight = "10dp"
    		android:orientation="horizontal" >
            
            <TextView
    	    android:id="@+id/date"
        	android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="12sp"/>
            
            <ImageView
    	    	android:id="@+id/img_comment"
        		android:layout_width="20dp"
        		android:layout_height="20dp"
        		android:layout_marginLeft="20dp"
        		android:contentDescription="@null"
        		android:scaleType="centerInside"
        		android:src="@drawable/afr"/>
            
        </LinearLayout>
        
        <com.android.samchat.MyWrapListView
	 		android:id="@+id/comments_list"
	 		android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:divider="@null"
			android:scrollbars="none">
		</com.android.samchat.MyWrapListView>
		
    </LinearLayout>
</RelativeLayout>
