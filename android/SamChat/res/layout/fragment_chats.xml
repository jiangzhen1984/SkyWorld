<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:easemob="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_bg"
    android:orientation="vertical">

    <include layout="@layout/ease_search_bar" 
        	 android:visibility="gone"/>
    
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fl_error_item"
        >
    </FrameLayout>
    
    <LinearLayout
        android:id="@+id/samQA_layout" 
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:layout_marginTop="2dp"
    	android:orientation="vertical">
    <LinearLayout 
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal">
    	
        <RelativeLayout
            android:id="@+id/samQA_relativelayout"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content">
        	
            <ImageView
                android:id="@+id/samQA"
            	android:layout_width="45dp"
            	android:layout_height="45dp"
            	android:layout_marginLeft="10dp"
            	android:layout_marginRight="10dp"
            	android:layout_marginTop="5dp"
            	android:layout_marginBottom="5dp"
            	android:contentDescription="@null"
            	android:src="@drawable/samqa"/>
       
        </RelativeLayout>  
    	
        <TextView
            	android:id="@+id/samQAtxt"
        		android:layout_width="0dp"
        		android:layout_height="wrap_content"
        		android:layout_weight="1"
        		android:layout_marginLeft = "5dp"
        		android:textSize="18sp"
        		android:text="@string/sam_question_and_answer"
        		android:layout_gravity="center_vertical"/>
        
        <RelativeLayout
            android:id="@+id/un_read_question_num_layout"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_marginRight="10dp"
        	android:layout_gravity="center_vertical"
        	android:visibility="invisible">
        	
            <ImageView
            	android:layout_width="20dp"
        		android:layout_height="20dp"
        		android:layout_centerInParent="true"
        		android:gravity="center"
            	android:contentDescription="@null"
            	android:src="@drawable/reminder_point_bg"/>
            <TextView
            	android:id="@+id/un_read_question_num"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:textSize="12sp"
        		android:layout_centerInParent="true"
        		android:gravity="center"
        		android:textColor="@color/common_white"/>
       
        </RelativeLayout> 
        
        
        
        
        
        

      </LinearLayout>
	
    </LinearLayout>
    
    <View 
            android:layout_height="1dp" 
            android:layout_width="match_parent"
            android:layout_marginLeft="70dp"
            android:background="@color/listview_gray_devider" />
    
    <LinearLayout
        android:id="@+id/samFriendGroup_layout" 
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:layout_marginTop="2dp"
    	android:orientation="vertical">
    <LinearLayout 
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal">
    	
        <RelativeLayout
            android:id="@+id/samFriendGroup_relativelayout"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content">
        	
            <ImageView
                android:id="@+id/samFriendGroup"
            	android:layout_width="45dp"
            	android:layout_height="45dp"
            	android:layout_marginLeft="10dp"
            	android:layout_marginRight="10dp"
            	android:layout_marginTop="5dp"
            	android:layout_marginBottom="5dp"
            	android:contentDescription="@null"
            	android:src="@drawable/samfg"/>
       
        </RelativeLayout>  
    	
        <TextView
            	android:id="@+id/samFriendGrouptxt"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:layout_marginLeft = "5dp"
        		android:textSize="18sp"
        		android:text="@string/sam_friend_group"
        		android:layout_gravity="center_vertical"/>
	</LinearLayout>
	
    
	
    </LinearLayout>
    
    <View 
            android:layout_height="1dp" 
            android:layout_width="match_parent"
            android:layout_marginLeft="70dp"
            android:background="@color/listview_gray_devider" />


    <com.easemob.easeui.widget.EaseConversationList
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/default_bg"
        android:cacheColorHint="#00000000"
        android:divider="@null"
        easemob:cvsListPrimaryTextSize="16sp"
         />

</LinearLayout>


