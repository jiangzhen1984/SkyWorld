<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" 
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/default_bg">
    
  <RelativeLayout 
      android:layout_width="match_parent"
      android:layout_height="wrap_content">  
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_top_bar"
        android:orientation="horizontal"
        android:background="@color/common_bg_green">
    
        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:contentDescription="@null"
            android:layout_gravity="center_vertical"
            android:src="@drawable/back"/>
            
        <TextView
             android:id="@+id/servicer_name"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginLeft="20dp"
             android:textSize="20sp"
             android:gravity="center"
             android:layout_gravity="center_vertical"
             android:textColor="@color/common_white"/>

    </LinearLayout>
    
    <com.easemob.easeui.ui.CircleImageView
        android:id="@+id/servicer_img"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:layout_marginTop="@dimen/top_bar_avatar_marginTop"
        android:contentDescription="@null"
        android:src="@drawable/em_default_avatar"/>
   </RelativeLayout> 

    
    <!--  ListView
	 		android:id="@+id/sam_answer_detail_list"
	 		android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_weight="1"
			android:layout_marginTop="10dp"
			android:layout_marginLeft="10dp"
			android:layout_marginRight="10dp"
			android:divider="@null"
			android:scrollbars="none">
	</ListView-->
	
	<RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">
    
	    <TextView
	         android:id="@+id/your_question"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textSize="18sp"
             android:textColor="@color/text_theme"
             android:text="@string/your_question"/>
	    
	    <TextView
	         android:id="@+id/question"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginLeft="20dp"
             android:layout_toRightOf="@id/your_question"
             android:textSize="18sp"/>
	    
	    <View
	        android:id="@+id/divider" 
	        android:layout_width="match_parent"
	        android:layout_height="1dp"
	        android:layout_marginTop="5dp"
	        android:background="@color/listview_gray_devider"
	        android:layout_below="@id/question"
	        android:layout_alignLeft="@id/question" /> 
	    
	    <TextView
	         android:id="@+id/my_answer"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginTop="5dp"
             android:layout_below="@id/divider"
             android:layout_alignLeft="@id/your_question"
             android:textSize="18sp"
             android:textColor="@color/text_theme"
             android:text="@string/my_answer"/>
	    
	    <TextView
	         android:id="@+id/answer"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginTop="5dp"
             android:layout_below="@id/divider"
             android:layout_alignLeft="@id/divider"
             android:textSize="18sp"/>
    
	</RelativeLayout>
	
	

	
    <TextView
         android:id="@+id/temp_talk"
         android:layout_width="match_parent"
         android:layout_height="42dp"
         android:layout_marginLeft="20dp"
         android:layout_marginRight="20dp"
         android:textSize="18sp"
         android:gravity="center"
         android:text="@string/temp_talk"
         android:textColor="@color/common_white"
         android:background="@color/common_bg_green"/>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">
    
   		<TextView
             android:id="@+id/add_friend"
             android:layout_width="0dp"
             android:layout_height="42dp"
             android:layout_weight="0.5"
             android:layout_marginRight="5dp"
             android:textSize="18sp"
             android:gravity="center"
             android:text="@string/add_friends"
             android:background="@drawable/shadow_rectange_bg"/>
   		
   		<TextView
             android:id="@+id/follow"
             android:layout_width="0dp"
             android:layout_height="42dp"
             android:layout_weight="0.5"
             android:layout_marginLeft="5dp"
             android:textSize="18sp"
             android:gravity="center"
             android:text="@string/follow"
             android:background="@drawable/shadow_rectange_bg"/>
	</LinearLayout>
	
	
	
</LinearLayout>
